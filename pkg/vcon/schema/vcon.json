{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/vcon.schema.json",
  "title": "vCon JSON Container (draft-ietf-vcon-vcon-container-03)",
  "type": "object",
  "required": [
    "vcon",
    "uuid",
    "created_at"
  ],
  "additionalProperties": false,
  "properties": {
    "vcon": {
      "type": "string",
      "const": "0.0.3",
      "description": "Version identifier for this vCon draft"
    },
    "uuid": {
      "type": "string",
      "format": "uuid"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "subject": {
      "type": "string"
    },
    "group": {
      "type": "string"
    },
    "redacted": {
      "type": "boolean"
    },
    "appended": {
      "type": "boolean"
    },
    "parties": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/party"
      }
    },
    "dialog": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/dialog"
      }
    },
    "analysis": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/analysis"
      }
    },
    "attachments": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/attachment"
      }
    }
  },
  "$defs": {
    "fileref": {
      "type": "object",
      "description": "Inline or external reference to binary/text content",
      "properties": {
        "body": {
          "type": "string"
        },
        "encoding": {
          "type": "string",
          "enum": [
            "base64",
            "json",
            "none"
          ]
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "content_hash": {
          "type": "string"
        }
      },
      "oneOf": [
        {
          "required": [
            "body",
            "encoding"
          ]
        },
        {
          "required": [
            "url",
            "content_hash"
          ]
        }
      ],
      "additionalProperties": false
    },
    "party": {
      "type": "object",
      "properties": {
        "tel": {
          "type": "string"
        },
        "stir": {
          "type": "string"
        },
        "mailto": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "validation": {
          "type": "string"
        },
        "gmlpos": {
          "type": "string"
        },
        "civicaddress": {
          "$ref": "#/$defs/civicaddress"
        },
        "timezone": {
          "type": "string"
        },
        "uuid": {
          "type": "string",
          "format": "uuid" 
        },
        "role": {
          "type": "string"
        },
        "contact_list": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "civicaddress": {
      "type": "object",
      "properties": {
        "country": { "type": "string" },
        "a1": { "type": "string" },
        "a2": { "type": "string" },
        "a3": { "type": "string" },
        "a4": { "type": "string" },
        "a5": { "type": "string" },
        "a6": { "type": "string" },
        "prd": { "type": "string" },
        "pod": { "type": "string" },
        "sts": { "type": "string" },
        "hno": { "type": "string" },
        "hns": { "type": "string" },
        "lmk": { "type": "string" },
        "loc": { "type": "string" },
        "flr": { "type": "string" },
        "nam": { "type": "string" },
        "pc": { "type": "string" }
      },
      "additionalProperties": false
    },
    "dialog": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["recording", "text", "transfer", "incomplete"]
        },
        "start": {
          "type": "string",
          "format": "date-time"
        },
        "duration": {
          "type": "number",
          "minimum": 0
        },
        "parties": {
          "oneOf": [
            { "type": "integer", "minimum": 0 },
            { 
              "type": "array", 
              "items": {
                "type": "integer",
                "minimum": 0
              }
            },
            {
              "type": "array",
              "items": {
                "oneOf": [
                  { "type": "integer", "minimum": 0 },
                  { 
                    "type": "array", 
                    "items": {
                      "type": "integer",
                      "minimum": 0
                    }
                  }
                ]
              }
            }
          ]
        },
        "originator": {
          "type": "integer",
          "minimum": 0
        },
        "mediatype": {
          "type": "string"
        },
        "filename": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "encoding": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "content_hash": {
          "type": "string"
        },
        "disposition": {
          "type": "string",
          "enum": [
            "no-answer", 
            "congestion", 
            "failed", 
            "busy", 
            "hung-up", 
            "voicemail-no-message"
          ]
        },
        "party_history": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/party_history"
          }
        },
        "transferee": {
          "type": "integer",
          "minimum": 0
        },
        "transferor": {
          "type": "integer",
          "minimum": 0
        },
        "transfer-target": {
          "type": "integer",
          "minimum": 0
        },
        "original": {
          "type": "integer",
          "minimum": 0
        },
        "consultation": {
          "type": "integer",
          "minimum": 0
        },
        "target-dialog": {
          "type": "integer",
          "minimum": 0
        },
        "campaign": {
          "type": "string"
        },
        "interaction_type": {
          "type": "string"
        },
        "interaction_id": {
          "type": "string"
        },
        "skill": {
          "type": "string"
        },
        "application": {
          "type": "string"
        },
        "message_id": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "start"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {"enum": ["recording", "text"]}
            },
            "required": ["type"]
          },
          "then": {
            "anyOf": [
              {
                "required": ["body", "encoding", "parties"]
              },
              {
                "required": ["url", "content_hash", "parties"]
              }
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {"const": "incomplete"}
            },
            "required": ["type"]
          },
          "then": {
            "required": ["disposition"]
          }
        },
        {
          "if": {
            "properties": {
              "type": {"const": "transfer"}
            },
            "required": ["type"]
          },
          "then": {
            "required": ["transferee", "transferor", "transfer-target", "original", "target-dialog"]
          }
        }
      ],
      "additionalProperties": false
    },
    "party_history": {
      "type": "object",
      "properties": {
        "party": {
          "type": "integer",
          "minimum": 0
        },
        "event": {
          "type": "string",
          "enum": ["join", "drop", "hold", "unhold", "mute", "unmute"]
        },
        "time": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "party",
        "event",
        "time"
      ],
      "additionalProperties": false
    },
    "analysis": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "dialog": {
          "oneOf": [
            { "type": "integer", "minimum": 0 },
            { "type": "array", "items": {"type": "integer", "minimum": 0} }
          ]
        },
        "mediatype": {
          "type": "string"
        },
        "filename": {
          "type": "string"
        },
        "vendor": {
          "type": "string"
        },
        "product": {
          "type": "string"
        },
        "schema": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "encoding": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "content_hash": {
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    },
    "attachment": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/$defs/fileref"
        },
        {
          "type": "object",
          "properties": {
            "dialog": {
              "type": "integer",
              "minimum": 0
            },
            "party": {
              "type": "integer",
              "minimum": 0
            },
            "start": {
              "type": "string",
              "format": "date-time"
            },
            "mediatype": {
              "type": "string"
            },
            "filename": {
              "type": "string"
            }
          },
          "required": [
            "start", 
            "party"
          ],
          "additionalProperties": false
        }
      ]
    }
  }
}